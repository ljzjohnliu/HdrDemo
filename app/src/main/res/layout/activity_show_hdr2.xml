<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/docUrlTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show_bug_case"
        android:textSize="12sp"
        android:visibility="gone"
        />

    <com.study.hdrdemo.view.PictureTextureView
        android:id="@+id/surface_view"
        android:layout_below="@+id/docUrlTv"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/img_view"
        android:layout_below="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:visibility="gone"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/draweeView"
        android:layout_marginTop="8dp"
        android:layout_marginStart="0dp"
        android:layout_below="@+id/img_view"
        fresco:actualImageScaleType="center"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:visibility="visible"/>
</RelativeLayout>