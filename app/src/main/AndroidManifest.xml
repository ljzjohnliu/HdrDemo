<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.study.hdrdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.study.hdrdemo.HdrDemoApplication"
        android:allowBackup="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HdrDemo">
        <activity android:name="com.study.hdrdemo.LaunchActivity"
            android:screenOrientation="fullSensor"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
        android:colorMode="hdr"
        -->
        <activity android:name=".ShowBugActivity"
            android:label="验证Jpg Hdr Activity"
            android:screenOrientation="fullSensor"
            android:exported="true"
            android:colorMode="hdr"
            />
        <activity android:name=".ShowSDRActivity"
            android:label="SDR"
            android:screenOrientation="fullSensor"
            android:exported="true"
            />
        <activity android:name=".ShowHDRActivity"
            android:label="Hdr"
            android:screenOrientation="fullSensor"
            android:exported="true"
            />
    </application>

</manifest>